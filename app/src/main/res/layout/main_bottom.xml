<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:background="#666666">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:id="@+id/ll_main_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_main_home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/home"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tv_main_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:layout_marginTop="3dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_main_news"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/newscenter"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tv_main_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新闻中心"
                android:layout_marginTop="3dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_smart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_main_smart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background= "@mipmap/smartservice"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tv_main_smart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智慧服务"
                android:layout_marginTop="3dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_gov"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_main_gov"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background= "@mipmap/govaffairs"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tv_main_gov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="政务"
                android:layout_marginTop="3dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_main_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/setting"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tv_main_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_marginTop="3dp"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>